<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') -%>
</head>

<body>

        <%- include('./partials/header') -%>

            <div class="container-fluid pt-4 px-4 vh-100">
                <div class="row g-4 p-4">

                    <div class="col-12">
                        <h5 class="mb-2 ms-2 text-dark">ORDER STATUS</h5>                   
                        <div class="vh-100">
                            
                            <form action="/admin/update-order-status" method="post" >
                                <select id="orderStatus" class="form-control" name="status">
                                    <option value="<%= foundOrder.status %>" selected ><%= foundOrder.status %></option>
                                    <option value="Processing">Processing</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Shipped">Shipped</option>
                                    <option value="Delivered">Delivered</option>
                                                                                                                
                                </select>
                                <input name="orderId" value="<%= foundOrder._id  %>" type="hidden">
                                <button class="btn btn-primary mt-3" type="submit" >UPDATE</button>
                            </form>
                            
                        </div>
                    </div>
                </div>
                
            </div>

            <%- include('./partials/footer') -%>

    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/lib/chart/chart.min.js"></script>
    <script src="/admin/lib/easing/easing.min.js"></script>
    <script src="/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="/admin/js/main.js"></script>  
    
</body>

</html>