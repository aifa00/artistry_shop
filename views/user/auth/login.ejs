<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artistry</title>
    <link rel="icon" href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS9J-3gn4CIzFKJR-aqlIq5qco2b9kpS6r4XOS23dnLwALSh_bR1MpNfLkRKKSrQezK-AU&usqp=CAU">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <style>
        section{
            background-color: white;
        }
        .card{
            background: #eeee;
        }
        .card-body h3{
            color: rgb(0, 0, 0);
        }
        .card-body p{
            color: rgb(0, 0, 0);
            font-size: 13px;
            margin-top: 2px;
        }
        .card-body a{
            color: rgb(0, 0, 0);
            text-decoration: none;
            font-weight: bold;
        }
        .card-body button{
            color: white;
            background-color: #c80404;
            padding: 5px 20px;
            font-size:15px;
            margin-bottom: 2px;
        }
        .formInput{
            padding: 0rem 4rem;
            margin-top: 5px;
        }
        .formInput label{
            color: #000000;
            font-size: 14px;
        }
        #name,#phone,#email,#password,#confirmPassword{
            background: transparent;
            border: 1px solid rgb(0, 0, 0);
            color: #000000;
        }
        #commonError,#emailError{
            color: #c80404;
            font-weight: 500;
            margin-top: 4px;
            font-size: 13px;
        }
        #logo{
            color: rgb(0, 0, 0);
            font-size: 25px;
            font-weight: 800;
            letter-spacing: 1px;
        }
        #mainBody{
            margin-top:10rem;
        }
    
    </style>
    
</head>

<body>

    <section class="vh-100">

        <nav class=" container navbar" >
            <div class="container-fluid">
              <span class="navbar-brand" id="logo" >ARTISTRY</span>
            </div>
        </nav>

        <div class="container" id="mainBody" >
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5" >
                    <div class="card shadow-2-strong">
    
                            <div class="card-body  text-center">
                                  <h3>LOGIN</h3>
                            </div>

                            <form id="login_form" action="/login" method="post">
    
                              <div class="formInput">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control form-control-md" id="email" name="email" autocomplete="email"/>

                                    <span id="emailError" ></span>

                              </div>
          
                              <div class="formInput">                              
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control form-control-md" id="password" name="password"/>      
                                    
                                    <div style="display: flex; justify-content: space-between; margin-top: 2px;align-items: center;" >

                                      <div class="d-flex">

                                        <div style="margin-top: 1px;" >
                                          <input type="checkbox" id="showPassword"  >
                                        </div>
      
                                        <div>
                                          <span style="color: rgb(0, 0, 0);font-size: 14px;" > Show password</span>
                                        </div>
                                      </div>
                                        
                                      <a href="/forgot-password" style="text-decoration: none;font-size:14px ;">Forgot password</a>

                                    </div>                                    
                                    
                                    <span id="commonError"><%= commonError  %></span>
                              </div>
    
                              <div  class="card-body text-center">
                                   <button class="btn" type="submit">LOGIN</button>
                                   <p>Don't have an account? <a href="/register">SIGNUP</a></p>
                              </div>
                    
                            </form>

                      </div>
                  </div>
              </div>
          </div>
    </section>

    <script>
        const form = document.getElementById('login_form');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');

        form.addEventListener('submit', (event) => {
          
          //set has errors false by default
          let hasErrors = false;

          //clear previous messages
          document.getElementById("emailError").innerHTML = "";
          document.getElementById("commonError").innerHTML = "";

          if (!emailInput.value || !passwordInput.value ) {

                hasErrors = true;
                document.getElementById("commonError").innerHTML = "Please fill in all fields";

          }else{

            //validate input email
          if (!emailInput.value.match(/^[A-Za-z\._\-0-9]*[@][A-Za-z]*[\.][a-z]{2,4}$/)) {
              hasErrors = true;
              document.getElementById("emailError").innerHTML = "Please enter a valid email.";
            }

          }
          //prevent submission if hasError true
          if (hasErrors) {
            event.preventDefault();
          }

        });

        //show password 
        const showPassword = document.getElementById('showPassword');
        showPassword.addEventListener('change', function() {
          if (showPassword.checked) {
            passwordInput.type = 'text';
          } else {
            passwordInput.type = 'password';
          }
        });


    </script>
</body>

</html>